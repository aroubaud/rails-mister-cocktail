<h1 class="text-center">Add dose for <%= @cocktail.name %></h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-3">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description, placeholder: '6 cl of Vodka' %>
        <%= f.submit 'Add dose', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
